{
  "manifest_version": 2,
  "name": "Tag Data Extractor",
  "version": "1.0",
  "description": "Extracts data from a particular tag and saves it in a file",
  "permissions": [
    "tabs",
    "activeTab",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
